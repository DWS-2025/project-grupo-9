{{<base}}
    {{$content}}
        <div class="container">
            <h2>{{#gymClass.id}}Edit{{/gymClass.id}}{{^gymClass.id}}Create{{/gymClass.id}} Class</h2>
            <form action="/classes" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{gymClass.name}}">
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" name="description">{{gymClass.description}}</textarea>
                </div>

                <div class="mb-3">
                    <label for="instructor" class="form-label">Instructor</label>
                    <input type="text" class="form-control" id="instructor" name="instructor" value="{{gymClass.instructor}}">
                </div>

                <div class="mb-3">
                    <label for="schedule" class="form-label">Schedule</label>
                    <input type="text" class="form-control" id="schedule" name="schedule" value="{{gymClass.schedule}}">
                </div>

                <button type="submit" class="btn btn-success">Save Class</button>
            </form>
        </div>
    {{/content}}
{{/base}}
