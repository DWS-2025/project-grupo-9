{{< base}}
    {{$content}}
        <div class="container">
            <h2>Routines</h2>
            <a href="/routines/form" class="btn btn-primary mb-3">Add New Routine</a>
            <table class="table">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Duration</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {{#routines}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{description}}</td>
                        <td>{{duration}}</td>
                        <td>
                            <a href="/routines/form?id={{id}}" class="btn btn-info btn-sm">Edit</a>
                            <a href="/routines/delete/{{id}}" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                {{/routines}}
                </tbody>
            </table>
        </div>
    {{/content}}
{{/base}}
